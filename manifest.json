{
  "manifest_version": 3,
  "name": "Reverse Image Filter",
  "version": "1.0",
  "description": "Remove filters from images by comparing with original",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Reverse Image Filter"
  }
}